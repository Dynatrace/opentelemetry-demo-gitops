{{- if  index .Values "components" "postgres-credentials" "enabled" }}
apiVersion: v1
kind: Secret
metadata:
  name: postgres-credentials
  namespace: "{{ .Release.Namespace }}"
  labels:
    app: postgres
type: Opaque
stringData:
  connection_string: "{{ index .Values.components "postgres-credentials" "connectionString"}}"
{{- end }}
