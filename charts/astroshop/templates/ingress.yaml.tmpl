  {{- end }}
  rules:
    - host: {{ $host }}
      http:
        paths:
          - path: /flagservice(/|$)(.*)
            pathType: ImplementationSpecific
            backend:
              service:
                name: flagd
                port:
                  number: 8013
{{- end }}
{{- end }}
